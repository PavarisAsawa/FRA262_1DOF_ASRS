#ifndef INC_ENCODER_H_
#define INC_ENCODER_H_

#include "main.h"

typedef struct _QEIStructure
{
	uint64_t Position[2];
	uint64_t TimeStamp[2];
	TIM_HandleTypeDef* EncoderTimer;
	float Postion_1turn;	// Degree
	float AngularVelocity;	// RPM
	float LinearVelocity;	// mm/s^2
	float LinearPosition;	// mm
}QEIStructureTypeDef;

void QEIEncoder_Update(QEIStructureTypeDef* QEIStructure ,uint64_t current_time);
void QEIEncoder_SetHome(QEIStructureTypeDef* QEIStructure);

#endif /* INC_ENCODER_H_ */
